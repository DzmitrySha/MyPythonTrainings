class Animal:
    def __init__(self, legs, color, name):
        self.legs = legs
        self.color = color
        self.name = name

class dog(Animal):
    def dogvoice(self):
        return print('woof! woof!')

class cat(Animal):
    def catvoice(self):
        return print('Meaoooowww...')

rex = dog(4, 'black', 'Rex')
felix = cat(4, 'ginger', 'Felix')

print(f'Cat {felix.name}, color - {felix.color}')
felix.catvoice()

print(f'Dog {rex.name}, color - {rex.color}, {rex.legs}-legs friend')
rex.dogvoice()
